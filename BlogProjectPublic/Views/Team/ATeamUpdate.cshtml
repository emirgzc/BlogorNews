
@model EntityLayer.Concrete.Team

@{
    ViewBag.Title = "ATeamUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("ATeamUpdate", "Team", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.Id, new { @class = "form-control" })

        @Html.Label("Yazar Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Meslek")
        @Html.TextBoxFor(x => x.Job, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Job, "", new { @class = "text-danger" })
        <br />
        <button class="btn btn-info">Güncelle</button>
    </div>
}

