
@model EntityLayer.Concrete.Service

@{
    ViewBag.Title = "AServiceUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-xl-12 col-xxl-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Hizmet Bilgileri Güncelleme</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                @using (Html.BeginForm("AServiceUpdate", "Service", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Id, new { @class = "form-control input-default" })
                    <div class="form-group">
                        @Html.Label("Başlık")
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control input-default", @required = "required" })
                        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.Label("İçerik")
                        @Html.TextAreaFor(x => x.Value, 5, 20, new { @class = "form-control input-default", @required = "required" })
                        @Html.ValidationMessageFor(x => x.Value, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                }
            </div>
        </div>
    </div>
</div>

