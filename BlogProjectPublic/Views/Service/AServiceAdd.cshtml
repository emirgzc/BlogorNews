
@model EntityLayer.Concrete.Service

@{
    ViewBag.Title = "AServiceAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-xl-12 col-xxl-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Hizmet Ekleme</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                @using (Html.BeginForm("AServiceAdd", "Service", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" name="Title" required="" class="form-control input-default">
                        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>İçerik</label>
                        <textarea class="form-control" required="" name="Value" rows="4" id="comment"></textarea>
                        @Html.ValidationMessageFor(x => x.Value, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                }
            </div>
        </div>
    </div>
</div>

