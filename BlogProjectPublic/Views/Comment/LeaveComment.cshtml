
<div class="post-comments-form">
    <h3 class="post-sub-heading">Bir Yorum Bırak</h3>
    <form method="post" action="#" id="form" role="form">

        <div class="row">

            <input type="hidden" name="BlogId" value=" @ViewBag.id" />
            <input type="hidden" name="CommentDate" value="@DateTime.Now.ToShortDateString()" required="required" />
            <div class="col-md-6 form-group">
                <input type="text" name="Name" id="name" class=" form-control" placeholder="İsim *" maxlength="100" required="">
            </div>
            <div class="col-md-6 form-group">
                <input type="text" name="Surname" id="name" class=" form-control" placeholder="Soyisim *" maxlength="100" required="">
            </div>
            <div class="col-md-6 form-group">
                <input type="email" name="Email" id="email" class=" form-control" placeholder="Mail *" maxlength="100" required="">
            </div>
            <div class="form-group col-md-12">
                <textarea name="Value" id="text" class=" form-control" rows="6" placeholder="Yorumunuz" maxlength="400"></textarea>
            </div>
            <div class="form-group col-md-12">
                <label for="cars">Puanınız</label>
                <select name="BlogRating" class="form-control">
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="40">40</option>
                    <option selected value="50">50</option>
                    <option value="60">60</option>
                    <option value="70">70</option>
                    <option value="80">80</option>
                    <option value="90">90</option>
                    <option value="100">100</option>
                </select>
            </div>
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-small btn-main ">
                    Send comment
                </button>
            </div>

        </div>

    </form>
</div>
