
@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "MyBlogsSeePublic";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hover Table</h4>
            <div class="table-responsive">
                <table class="table header-border table-hover verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">İsim</th>
                            <th scope="col" style="width:40%;"></th>
                            <th scope="col">Başarı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>#</th>
                                <td>@item.Title</td>
                                <td>
                                    <div class="progress" style="height: 10px">
                                        <div class="progress-bar gradient-1" style="width: @item.BlogRating%;" role="progressbar">
                                            <span class="sr-only">@item.BlogRating% Rating</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="label gradient-1 btn-rounded">@item.BlogRating%</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

