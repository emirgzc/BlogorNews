
@model IEnumerable<EntityLayer.Concrete.Blog>

<div class="hero-slider">
    @foreach (var item in Model)
    {
        <div class="slider-item th-fullpage hero-area" style="background-image: url(@item.Image);">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 text-center">
                        <p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">@item.Category.Title</p>
                        <h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">@item.Title</h1>
                        <p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">@item.Value.Substring(0,200)...</p>
                        <a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" href="/Blog/BlogDetails/@item.BlogId">Devamını Oku</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


