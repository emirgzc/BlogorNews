
@model IEnumerable<EntityLayer.Concrete.Writer>

@{
    ViewBag.Title = "AWriterList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<a href="/Writer/AWriterAdd/" class="btn btn-primary mb-3">Ekle</a>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-xl-4">
            <div class="card">
                <div class="card-body">
                    <div class="media align-items-center mb-4">
                        <img class="mr-3" src="@item.Image" width="80" height="80" alt="">
                        <div class="media-body">
                            <h3 class="mb-0">@item.Name</h3>
                            <p class="text-muted mb-0">@item.Country</p>
                        </div>
                    </div>


                    <h5>@item.Job</h5>
                    <ul class="card-profile__info">
                        <li class="mb-1"><strong class="text-dark mr-4">Doğum Günü</strong><span> @item.DateOfBirth</span></li>
                        <li><strong class="text-dark mr-4">Mail Adresi</strong><span>@item.Email</span></li>
                    </ul>
                    <a href="/Writer/AWriterDelete/@item.WriterId" class="btn btn-danger">Sil</a>
                    <a href="/Writer/AWriterUpdate/@item.WriterId" class="btn btn-info">Güncelle</a>
                </div>
            </div>
        </div>
    }
</div>

